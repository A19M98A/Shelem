<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:clipChildren="false"
    tools:context=".activities.GameScreenActivity"
    >


    <RelativeLayout
        android:id="@+id/header_gamescreen"
        android:layout_width="match_parent"
        android:layout_height="90dp">



        <carbon.widget.ImageView
            android:id="@+id/img_menu_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_menu"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            />


        <RelativeLayout
            android:id="@+id/container_total_scores_mainscreen"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            >


            <carbon.widget.ImageView
                android:id="@+id/img_hokm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:carbon_cornerRadius="25dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_clubs"
                android:layout_centerHorizontal="true"
                android:background="@color/black"
                app:carbon_elevation="12dp"
                android:padding="2dp"
                />




            <carbon.widget.RelativeLayout
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="-25dp"
                android:layout_toLeftOf="@id/img_hokm"
                android:background="@color/black"
                app:carbon_cornerRadiusTopStart="16dp"
                app:carbon_cornerRadiusBottomStart="16dp"
                app:carbon_elevation="8dp"
                app:carbon_elevationShadowColor="@color/black"
                >

                <carbon.widget.TextView
                    android:id="@+id/txt_left_score_total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1060"
                    android:fontFamily="@font/baloobhai_regular"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:background="@drawable/background_light_green_radius_left_16dp"
                    android:paddingRight="20dp"
                    android:layout_margin="2dp"
                    />


            </carbon.widget.RelativeLayout>




            <carbon.widget.RelativeLayout
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginTop="26dp"
                android:layout_toRightOf="@id/img_hokm"
                android:layout_marginLeft="-25dp"
                android:background="@color/black"
                app:carbon_cornerRadiusTopEnd="16dp"
                app:carbon_cornerRadiusBottomEnd="16dp"
                app:carbon_elevation="8dp"
                app:carbon_elevationShadowColor="@color/black"
                >


                <carbon.widget.TextView
                    android:id="@+id/txt_right_score_total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="950"
                    android:fontFamily="@font/baloobhai_regular"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:background="@drawable/background_red_radius_right_16dp"
                    app:carbon_cornerRadiusTopEnd="16dp"
                    android:paddingLeft="20dp"
                    android:layout_margin="2dp"
                    />




            </carbon.widget.RelativeLayout>


            <TextView
                android:id="@+id/txt_score_separator"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:layout_below="@id/img_hokm"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="105"
                android:fontFamily="@font/baloobhai_regular"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/carbon_green_a400"
                android:layout_below="@id/img_hokm"
                android:layout_toLeftOf="@id/txt_score_separator"
                />


            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="55"
                android:fontFamily="@font/baloobhai_regular"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/orange"
                android:layout_below="@id/img_hokm"
                android:layout_toRightOf="@id/txt_score_separator"
                />




        </RelativeLayout>


        <TextView
            android:id="@+id/txt_max_point"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="1365"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:gravity="center"
            android:background="@drawable/ic_medal"
            android:fontFamily="@font/concert_one_regular"
            android:textColor="@color/light_orange"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" />


        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_joker"
            android:layout_toLeftOf="@id/txt_max_point"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            />


    </RelativeLayout>





    <carbon.widget.ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img_avatar_player_two"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header_gamescreen"
        app:srcCompat="@drawable/avatar_03"
         />


    <carbon.widget.TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="martindb"
        android:fontFamily="@font/baloobhai_regular"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_below="@id/img_avatar_player_two"
        android:layout_centerHorizontal="true"/>




    <carbon.widget.ImageView
        android:id="@+id/img_avatar_player_four"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/avatar_02"
        android:layout_marginLeft="16dp"
        />



    <carbon.widget.TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="amirmahdinasr"
        android:fontFamily="@font/baloobhai_regular"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@id/img_avatar_player_four"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"/>



    <carbon.widget.ImageView
        android:id="@+id/img_avatar_player_three"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/avatar_01"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        />



    <carbon.widget.TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="aminallahjani"
        android:fontFamily="@font/baloobhai_regular"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@id/img_avatar_player_three"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"/>


    <com.example.martin.playingcards.customViews.CircularProgressBar
        android:id="@+id/progress_timer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/btn_continue"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        />

    <carbon.widget.TextView
        android:id="@+id/txt_timer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="10"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="18dp"
        android:fontFamily="@font/baloobhai_regular"
        android:layout_alignLeft="@id/progress_timer"
        android:layout_alignTop="@id/progress_timer"
        android:visibility="gone"
        />


    <carbon.widget.TextView
        android:id="@+id/btn_continue"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:fontFamily="@font/baloobhai_regular"
        android:layout_centerHorizontal="true"
        android:background="@color/blue"
        android:gravity="center"
        app:carbon_cornerRadius="16dp"
        app:carbon_elevation="8dp"
        app:carbon_elevationShadowColor="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:visibility="gone"
        />


    <RelativeLayout
        android:id="@+id/container_determine_claim"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:visibility="gone"
        >


        <carbon.widget.ImageView
            android:id="@+id/btn_subtract_claim"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/ic_minus"
            app:carbon_cornerRadius="16dp"
            app:carbon_elevation="4dp"
            app:carbon_elevationShadowColor="@color/light_orange"/>


        <carbon.widget.TextView
            android:id="@+id/txt_claim"
            android:layout_width="76dp"
            android:layout_height="32dp"
            android:text="100"
            android:textSize="24dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_toRightOf="@id/btn_subtract_claim"
            android:layout_weight="1"
            android:fontFamily="@font/baloobhai_regular"
            android:textColor="@color/black"
            />


        <carbon.widget.ImageView
            android:id="@+id/btn_add_claim"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/txt_claim"
            app:srcCompat="@drawable/ic_plus"
            app:carbon_cornerRadius="16dp"
            app:carbon_elevation="4dp"
            app:carbon_elevationShadowColor="@color/blue"/>


        <carbon.widget.TextView
            android:id="@+id/btn_pass_claim"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:text="Pass"
            android:textSize="16dp"
            android:fontFamily="@font/baloobhai_regular"
            android:background="@color/light_orange"
            android:gravity="center"
            app:carbon_cornerRadius="8dp"
            app:carbon_elevation="4dp"
            app:carbon_elevationShadowColor="@color/light_orange"
            android:textColor="@color/white"
            android:layout_below="@id/txt_claim"
            android:layout_marginTop="16dp"
            />

        <carbon.widget.TextView
            android:id="@+id/btn_submit_claim"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:text="Claim"
            android:textSize="16dp"
            android:fontFamily="@font/baloobhai_regular"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:gravity="center"
            app:carbon_cornerRadius="8dp"
            app:carbon_elevation="4dp"
            app:carbon_elevationShadowColor="@color/blue"
            android:layout_below="@id/txt_claim"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            />




    </RelativeLayout>








    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone"/>

</RelativeLayout>